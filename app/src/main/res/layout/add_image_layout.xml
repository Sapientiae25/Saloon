<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    app:cardElevation="10dp"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="@color/white"
    app:cardMaxElevation="12dp"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_image_"
            android:padding="20dp"
            android:drawablePadding="12dp"
            android:textSize="30sp"
            app:drawableStartCompat="@drawable/ic_baseline_add_circle_24"
            app:drawableTint="@color/teal_200" />
        <TextView
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:background="@drawable/top_border"
            android:layout_height="wrap_content"
            android:text="@string/remove_image"
            android:padding="20dp"
            android:drawablePadding="12dp"
            android:textSize="30sp"
            app:drawableStartCompat="@drawable/ic_baseline_cancel_24"
            app:drawableTint="@color/red" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
